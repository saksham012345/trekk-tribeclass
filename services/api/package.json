{
  "name": "trekk-tribe-api",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --watch src --exec ts-node src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "cli": "ts-node src/cli/trek-admin.ts",
    "cli:help": "npm run cli -- --help",
    "cli:stats": "npm run cli -- stats",
    "cli:user:list": "npm run cli -- user list",
    "cli:trip:list": "npm run cli -- trip list",
    "cli:backup": "npm run cli -- backup",
    "cli:cleanup": "npm run cli -- cleanup",
    "cli:logs": "npm run cli -- logs",
    "cleanup:trips": "ts-node src/scripts/cleanup-test-trips.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.1",
    "pino": "^9.3.2",
    "zod": "^3.23.8",
    "socket.io": "^4.7.2",
    "nodemailer": "^6.9.4",
    "cookie-parser": "^1.4.6",
    "express-session": "^1.17.3",
    "connect-mongo": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.12",
    "@types/nodemailer": "^6.4.9",
    "@types/cookie-parser": "^1.4.4",
    "@types/express-session": "^1.17.7",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
